<script>
	$('img,.img').on('click', function () {
		$src  = this.src;
	    layer.open({
	        title: false,
	        type: 1,
	        content: '<img width="100%" src="'+$src+'" />',
	        area: ['auto', 'auto'],
	        shadeClose: true
	    });
	});
</script>

